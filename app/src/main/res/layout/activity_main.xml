<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULADORA MÉDIA BANDTEC!"
        android:paddingTop="20dp"
        android:paddingLeft="50dp"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:id="@+id/titulo"
        android:textColor="@color/colorPrimary"

   />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliação 1:"
        android:layout_marginTop="33dp"

        android:fontFamily="sans-serif"
        android:textSize="50px"
        android:id="@+id/tx_nota1"
        app:layout_constraintTop_toBottomOf="@+id/titulo"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota continuada 1"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        android:id="@+id/et_text"
        android:inputType="numberDecimal"
        android:paddingLeft="50dp"
        android:width="300dp"
        app:layout_constraintLeft_toRightOf="@id/tx_nota1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliação 2:"
        android:layout_marginTop="40dp"

        android:fontFamily="sans-serif"
        android:textSize="50px"
        android:id="@+id/tx_nota2"
        app:layout_constraintTop_toBottomOf="@+id/tx_nota1"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota continuada 2"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/et_text2"
        android:inputType="numberDecimal"
        android:paddingLeft="50dp"
        android:width="300dp"
        app:layout_constraintTop_toBottomOf="@+id/et_text"
        app:layout_constraintLeft_toRightOf="@id/tx_nota2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliação 3:"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif"
        android:textSize="50px"
        android:id="@+id/tx_nota3"
        app:layout_constraintTop_toBottomOf="@+id/tx_nota2"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nota continuada 3"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/et_text3"
        android:inputType="numberDecimal"
        android:paddingLeft="50dp"
        android:width="300dp"
        app:layout_constraintTop_toBottomOf="@+id/et_text2"
        app:layout_constraintLeft_toRightOf="@id/tx_nota3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif"
        android:textSize="50px"
        android:id="@+id/tx_nome"
        app:layout_constraintTop_toBottomOf="@+id/tx_nota3"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Seu nome"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/et_nome"
        android:inputType="text"

        android:width="350dp"
        app:layout_constraintTop_toBottomOf="@+id/et_text3"
        app:layout_constraintLeft_toRightOf="@id/tx_nome"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tx_nome"
        android:id="@+id/tx_null"
        />

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular média"
        android:textSize="30sp"
        android:id="@+id/bt_01"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@+id/tx_nome"
        android:onClick="calcular"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/tx_null"
        android:layout_marginLeft="70dp"

        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bt_01"
        android:height="100dp"
        android:id="@+id/tx_msg"
        android:text=""
        android:textSize="50px"
        android:width="420dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>